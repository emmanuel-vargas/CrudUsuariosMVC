@model List<CrudUsuariosMVC.Models.Usuario>

<h1 class="mb-4">Lista de Usuarios</h1>

<a class="btn btn-primary mb-3" asp-controller="Usuarios" asp-action="Crear">Crear nuevo</a>

<table class="table table-striped table-bordered">
    <thead class="table-primary">
        <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Nombre</td>
                <td>@u.Correo</td>
                <td>@u.Rol</td>
                <td>
                    <a class="btn btn-sm btn-warning me-1" asp-controller="Usuarios" asp-action="Editar" asp-route-id="@u.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Usuarios" asp-action="Eliminar" asp-route-id="@u.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
