@model CrudUsuariosMVC.Models.Usuario

<h2 class="mb-4">@ViewContext.RouteData.Values["action"] Usuario</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]" class="needs-validation" novalidate>
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Correo" class="form-label">Correo</label>
        <input asp-for="Correo" class="form-control" type="email" required />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Rol" class="form-label">Rol</label>
        <input asp-for="Rol" class="form-control" required />
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
